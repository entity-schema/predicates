{
    "id": "http://workingspec.com/schema/image-file",
    "title": "Image File",
    "description": "An image file stored on disk",
    "type": "object",
    "format": "entity-schema",
    "properties": {
        "name": {
            "$ref": "http://workingspec.com/schema/name"
        },
        "path": {
            "$ref": "http://workingspec.com/schema/file-path"
        },
        "meta": {
            "$ref": "http://workingspec.com/schema/image-file-meta"
        },
        "tags": {
            "title": "Tags",
            "type": "array",
            "items": {
                "$ref": "http://workingspec.com/schema/tag"
            }
        }
    },
    "additionalProperties": false,
    "required": [
        "name",
        "path",
        "meta"
    ]
}
